<?xml version="1.0" encoding="utf-8"?>
<ToolRegistry>
  <Category DisplayName="Home">
    <Button Name="HomePanel" DisplayName="Home" Command="ShowHomePanel" ImageUri="/Resources/Images/Icons/Toolbar/home-32.png" ToolTip="Show home panel" />
    <Tool Name="Pan" DisplayName="Pan" DrawMode="None" ImageUri="/Resources/Images/Icons/Toolbar/pan-32.png" ToolTip="Pan" HelpText="Drag the map around to pan." />
    <Tool Name="Zoom In" DisplayName="Zoom In" DrawMode="Rectangle" Command="ZoomInToExtent" ImageUri="/Resources/Images/Icons/Toolbar/zoom-in-32.png" ToolTip="Zoom In" HelpText="Drag a rectangle or click the map to zoom in. A large rectangle zooms less. A small rectangle zooms more. To reverse zoom, hold CTRL." />
    <Tool Name="Zoom Out" DisplayName="Zoom Out" DrawMode="Rectangle" Command="ZoomOutToExtent" ImageUri="/Resources/Images/Icons/Toolbar/zoom-out-32.png" ToolTip="Zoom Out" HelpText="Drag a rectangle or click the map to zoom out. A large rectangle zooms less. A small rectangle zooms more. To reverse zoom, hold CTRL." />
    <Button Name="Initial View" Command="ZoomToInitialExtent" ImageUri="/Resources/Images/Icons/Toolbar/zoom-initial-32.png" ToolTip="Zoom to initial extent" />
    <Button Name="Full Extent" Command="ZoomToFullExtent" ImageUri="/Resources/Images/Icons/Toolbar/zoom-full-32.png" ToolTip="Zoom to full extent" />
    <Button Name="Previous Extent" Command="ZoomToPreviousExtent" ImageUri="/Resources/Images/Icons/Toolbar/zoom-previous-32.png" ToolTip="Zoom to previous extent" />
    <Button Name="Next Extent" Command="ZoomToNextExtent" ImageUri="/Resources/Images/Icons/Toolbar/zoom-next-32.png" ToolTip="Zoom to next extent" />
    <Tool Name="Identify" DisplayName="Identify" ToolTip="Identify features" DrawMode="Rectangle" Command="Identify" ImageUri="/Resources/Images/Icons/Toolbar/identify-32.png" HelpText="Click or drag on the map to identify features at that point." />
    <Region RegionName="AdvancedControlsRegion" />
    <Button Name="Print Map" Command="PrintMap" ImageUri="/Resources/Images/Icons/Toolbar/print-32.png" ToolTip="Print a map" />
    <Button Name="Export Map" Command="ShowExportMapDialog" ImageUri="/Resources/Images/Icons/Toolbar/share-map-32.png" ToolTip="Export a map image" />
    <Button Name="Reports" Module="Reporting" Command="RunReport" ImageUri="/Resources/Images/Icons/Toolbar/reports-32.png" ToolTip="Create a report"/>
    <Button Name="Toggle Mouse Coordinates" Command="ToggleMouseCoordinates" ImageUri="/Resources/Images/Icons/Toolbar/coordinates-32.png" ToolTip="Show or hide the mouse coordinates"/>
    <Button Name="LaunchDefaultHelp" DisplayName="Help" Command="ShowHelpTopic" CommandParameter="" ImageUri="/Resources/Images/Icons/Toolbar/help-32.png" ToolTip="Show help topics" />
    <Button Name="ClickForHelp" DisplayName="What's This?" Command="InvokeClickHelp" ImageUri="/Resources/Images/Icons/Toolbar/help-cursor-32.png" ToolTip="Enable click help" />
  </Category>
  <Category DisplayName="Data Sources">
    <Button Name="Map Layers" Command="SwitchToLayerView" ImageUri="/Resources/Images/Icons/Toolbar/layers-32.png" ToolTip="Show layer list" />
    <Button Name="Add Layer" Command="AddMapLayerInteractive" ImageUri="/Resources/Images/Icons/Toolbar/layers-add-32.png" ToolTip="Add external map layer" />
    <Button Name="Re-Order Layers" Command="ShowLayerDrawingOrder" ImageUri="/Resources/Images/Icons/Toolbar/layers-reorder-32.png" ToolTip="Change the drawing order of layers" />
    <Button Name="Layer Catalog" Command="ShowLayerCatalog" ImageUri="/Resources/Images/Icons/Toolbar/layers-add-32.png" ToolTip="Add layers from the layer catalog" />
    <Button Name="Add Shapefile" Command="OpenShapefileDialog" ImageUri="/Resources/Images/Icons/Toolbar/shapefile-add-32.png" ToolTip="Open a shapefile and add it to the map" />
    <Button Name="Add CSV File" Command="OpenCsvDialog" ImageUri="/Resources/Images/Icons/Toolbar/csv-add-32.png" ToolTip="Open a CSV file and add it to the map" />
    <Button Name="Add Address File" Command="OpenExcelFileDialog" ImageUri="/Resources/Images/Icons/Toolbar/geocode-batch-32.png" ToolTip="Open an Excel file and add it to the map" />
    <Button DisplayName="Google Maps™" Command="OpenWebPage" CommandParameter="../WMI/GoogleMaps.html" ImageUri="/Resources/Images/Icons/Toolbar/map-google-32.png" ToolTip="View the current location in Google Maps / Street View" />
    <Button DisplayName="Bing™ Maps" Command="OpenWebPage" CommandParameter="../WMI/BingMaps.html" ImageUri="/Resources/Images/Icons/Toolbar/map-bing-32.png" ToolTip="View the current location in Bing Maps / Birdseye" />
  </Category>
  <Category DisplayName="Find">
    <Region RegionName="IdentifyRegion" />
    <Tool Name="IdentifyPoint" DisplayName="Point Identify" ToolTip="Identify (Point)" DrawMode="Point" Command="Identify" ImageUri="/Resources/Images/Icons/Toolbar/identify-point-32.png" />
    <Tool Name="IdentifyFreehand" DisplayName="Freehand Identify" ToolTip="Identify (Freehand)" DrawMode="Freehand" Command="Identify" ImageUri="/Resources/Images/Icons/Toolbar/identify-freehand-32.png" />
    <Tool Name="IdentifyPolyline" DisplayName="Line Identify" ToolTip="Identify (Line)" DrawMode="Polyline" Command="Identify" ImageUri="/Resources/Images/Icons/Toolbar/identify-polyline-32.png" />
    <Tool Name="IdentifyPolygon" DisplayName="Polygon Identify" ToolTip="Identify (Polygon)" DrawMode="Polygon" Command="Identify" ImageUri="/Resources/Images/Icons/Toolbar/identify-polygon-32.png" />
    <Tool Name="IdentifyRectangle" DisplayName="Rectangle Identify" ToolTip="Identify (Rectangle)" DrawMode="Rectangle" Command="Identify" ImageUri="/Resources/Images/Icons/Toolbar/identify-rectangle-32.png" />    
    <Region RegionName="MapTipsRegion" />
    <Button Name="Filter" Command="ActivateView" CommandParameter="FilterBuilderView" ImageUri="/Resources/Images/Icons/Toolbar/filter-32.png" ToolTip="Show advanced filter builder" />
    <Button Name="Query" Command="ActivateView" CommandParameter="SimpleQueryBuilderView" ImageUri="/Resources/Images/Icons/Toolbar/query-builder-32.png" ToolTip="Show simple query builder" />
    <Button Name="Advanced Query" Command="ActivateView" CommandParameter="QueryBuilderView" ImageUri="/Resources/Images/Icons/Toolbar/query-builder-advanced-32.png" ToolTip="Show advanced query builder" />
    <Tool Name="ReverseGeocodePoint" Command="ReverseGeocodePoint" DisplayName="Address by Location" ToolTip="Reverse Geocode (Point)" DrawMode="Point" ImageUri="/Resources/Images/Icons/Toolbar/house-pointer-32.png" HelpText="Click on the map to identify the address of that point." />
    <Button Name="Address Search" Command="ForwardGeocode" CommandParameter="0" ToolTip="Search for an Address" ImageUri="/Resources/Images/Icons/Toolbar/address-search-32.png" />
    <Button Name="View Results" Command="SwitchToResultsView" ImageUri="/Resources/Images/Icons/Toolbar/search-results-32.png" ToolTip="View current search results" />
    <Button Name="View Selected" Command="SwitchToSelectionView" ImageUri="/Resources/Images/Icons/Toolbar/star-32.png" ToolTip="View selected features" />
  </Category>
  <Category DisplayName="Drawing">
    <Region RegionName="DrawingToolsRegion" />
    <Button Name="Save as Shapefile" Command="ExtractMarkup" ImageUri="/Resources/Images/Icons/Toolbar/draw-extract-32.png" ToolTip="Extract Markup" />
    <Region RegionName="MarkupSnappingRegion" />
  </Category>
  <Category DisplayName="Analysis">
    <Region RegionName="MeasurementToolsRegion" />
    <Region RegionName="CoordinateToolsRegion" />
  </Category>
  <Category DisplayName="Editing">
    <Region RegionName="EditToolsRegion" />
  </Category>
</ToolRegistry>